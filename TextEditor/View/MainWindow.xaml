<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- The text is displayed here -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox
                    Name="EditorBox"
                    FontFamily="Consolas"
                    FontSize="14"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    BorderThickness="0"
                    Background="Transparent"
                    VerticalScrollBarVisibility="Auto"

                    />
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
            <Button Name="ReadOnlyButton" Content="ReadOnly" Margin="5"/>
            <Button Name="InsertButton" Content="Insert" Margin="5"/>
            <Button Name="OverwriteButton" Content="Overwrite" Margin="5"/>
        </StackPanel>

        <DockPanel Grid.Row="2" LastChildFill="False" Margin="5,5,5,5">
            <Label Name="CaretPositionLabel"
               Content="Caret: 0"
               HorizontalAlignment="Right"
               Padding="5,0"
               FontSize="12" />
            <Label Name="EditorStateLabel"
                Content="State: Insert"
                HorizontalAlignment="Left"
                Padding="5,0"
                FontSize="12" />
        </DockPanel>
    </Grid>
</Window>
